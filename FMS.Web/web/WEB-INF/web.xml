<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:log4j.properties</param-value>
    </context-param>
    
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>org.apache.tiles.impl.BasicTilesContainer.DEFINITIONS_CONFIG</param-name>
        <param-value>
            /WEB-INF/tiles/web-tiles.xml, /WEB-INF/tiles/app-author-tiles.xml, /WEB-INF/tiles/app-rootdealer-tiles.xml, /WEB-INF/tiles/app-leafdealer-tiles.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
    </listener>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.csbl.fms.servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registrationservlet.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProjectsUrlServlet</servlet-name>
        <servlet-class>com.csbl.fms.servlet.ProjectsUrlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProjectsUrlServlet</servlet-name>
        <url-pattern>/projectsurlservlet.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DealerServlet</servlet-name>
        <servlet-class>com.csbl.fms.servlet.DealerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DealerServlet</servlet-name>
        <url-pattern>/dealerservlet.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FarmerServlet</servlet-name>
        <servlet-class>com.csbl.fms.servlet.FarmerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FarmerServlet</servlet-name>
        <url-pattern>/farmerservlet.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CropsServlet</servlet-name>
        <servlet-class>com.csbl.fms.servlet.CropsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CropsServlet</servlet-name>
        <url-pattern>/cropsservlet.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FertilizerServlet</servlet-name>
        <servlet-class>com.csbl.fms.servlet.FertilizerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FertilizerServlet</servlet-name>
        <url-pattern>/fertilizerservlet.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RecommendationServlet</servlet-name>
        <servlet-class>com.csbl.fms.servlet.RecommendationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecommendationServlet</servlet-name>
        <url-pattern>/recommendationservlet.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FertilizerAppServlet</servlet-name>
        <servlet-class>com.csbl.fms.servlet.FertilizerAppServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FertilizerAppServlet</servlet-name>
        <url-pattern>/fertilizerappservlet.do</url-pattern>
    </servlet-mapping>
    
</web-app>
